{% extends 'basePDF.html.twig' %}
{% block title %}Liste des Livres
{% endblock %}
{% block header %}Liste des Livres
{% endblock %}
{% block content %}

	<table class=" table-bordered  table-striped text-center">
		<thead>
			<tr>
				
				<th>Titre</th>
				<th>DatePub</th>
				<th>Langue</th>
				<th>ISBN</th>
				<th>Auteur</th>
				<th>Prix</th>

			</tr>
		</thead>
		<tbody>
			{% for livre in livres %}
				<tr>
					
					<td>{{ livre.titre }}</td>
					<td>{{ livre.datePub ? livre.datePub|date('Y-m-d') : '' }}</td>
					<td>{{ livre.langue }}</td>
					<td>{{ livre.isbn }}</td>
					<td>{{ livre.idauteur.nom }}</td>
					<td>{{ livre.prix }}</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="7">Aucun enregistrement trouv√©</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>.

{% endblock %}
