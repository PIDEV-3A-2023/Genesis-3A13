{% extends 'baseFront.html.twig' %}

{% block body %}
<div class="container">
<br>
    <h2 style="text-align:center;color:black">Modifier Mon profile</h2>
  <form action="{{ path('app_profile_edit',{'idUtilisateur': app.user.idUtilisateur}) }}" method="post">
    <div class="form-group">
      <label for="exampleInputEmail1">Nom</label>
      <input type="text" value="{{ app.user.nom }}"  class="form-control" id="exampleInputEmail1" name="nom" aria-describedby="emailHelp" placeholder="">
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Prénom</label>
      <input type="text" value="{{ app.user.prenom }}" class="form-control" id="exampleInputPassword1" name="prenom" placeholder="">
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Email</label>
      <input type="email" value="{{ app.user.email }}" class="form-control" id="exampleInputPassword1" name="email" placeholder="">
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Numéro de Telephone</label>
      <input type="text" value="{{ app.user.numTelephone }}" class="form-control" id="exampleInputPassword1" name="telephone" placeholder="">
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Password</label>
      <input type="password" value="{{ app.user.motDePasse }}" class="form-control" id="exampleInputPassword1" name="password" placeholder="">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
<br>
{% endblock %}