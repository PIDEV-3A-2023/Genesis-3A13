{% extends 'baseFront.html.twig' %}
{% block title %}Modifier profil
{% endblock %}
{% block body %}
<div class="container">

    <h2 style="text-align:center;color:black">Modifier Mon profile</h2>
    <br>
	<br>
{% for type, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ type }} alert-dismissible fade show d-flex align-items-center">
		{% if type == 'success'%}
		<i class="fas fa-check-circle"style="padding-right: 10px"></i>
		{% elseif type == 'danger'%}
		<i class="fas fa-times-circle"style="padding-right: 10px"></i>
		{% endif %}
		<div>
		{{ message }}
		</div>
         <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
{% endfor %}

<br>
        {{ include('profileedit/_form.html.twig', {'button_label': 'Update'}) }}

</div>
<br>
{% endblock %}