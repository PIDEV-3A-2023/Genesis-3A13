{% extends 'baseBack.html.twig' %}

{% block title %}Fidelite
{% endblock %}

{% block body %}
   <div class="d-flex justify-content-between w-100 flex-wrap">
		<div class="mb-3 mb-lg-0">
        			<h1>

                <span class="sidebar-icon">

					<img src="{{asset('Back/img/icons/user.png')}}" class="icon icon-s me-2" fill="currentColor" viewbox="0 0 20 20" class="card-img-top rounded-circle border-white" alt="Logout">

				</span>Liste des fidelite</h1>				
		</div>
		<div style="padding-top: 10px;">

			<a href="{{ path('app_fidelite_new') }}" class="btn btn-primary d-inline-flex align-items-center" style="background-color:#00377E;">
				<i class="fas fa-plus" style="padding-right:3px"></i>
				Cr√©er un nouveau</a>
                 <form method="post" action="{{ path('app_stat') }}">
        <button type="submit" class="btn btn-primary">Consulter Stat</button>
    </form>
		</div>
	</div>
	<br>
{% for type, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ type }} alert-dismissible fade show">{{ message }}
         <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
{% endfor %}

	<div class="card border-0 shadow mb-4">
		<div class="card-body">
		<div class="table-responsive">
		<table class="table table-centered table-nowrap mb-0 rounded">
        <thead>
            <tr>
                <th>IdFidelite</th>
                <th>TotalAchat</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for fidelite in fidelites %}
            <tr>
                <td>{{ fidelite.idFidelite }}</td>
                <td>{{ fidelite.totalAchat }}</td>
                <td>{{ fidelite.type }}</td>
                <td>
                    <a href="{{ path('app_fidelite_show', {'idFidelite': fidelite.idFidelite}) }}"><i class="fas fa-info-circle text-info"></i></a></a>
                    <a href="{{ path('app_fidelite_edit', {'idFidelite': fidelite.idFidelite}) }}"><i class="fas fa-edit text-warning"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
        </div>
    </div>
    

{% endblock %}
