                <th class="text-primary fw-bold">NbTicket</th>
                <td>{{ evenement.nbTicket }}</td>
            </tr>
        </tbody>
    </table>
    <div class="row">
                            <div  class="col-md-2">
    {% if evenement.date <  date('now') %}
    <div  style="padding-left:10px;padding-bottom:10px">
