<form method="post" action="{{ path('app_competition_delete', {'idCompetition': competition.idCompetition}) }}" onsubmit="return confirm('Êtes-vous sûr de bien vouloir supprimer cette compétition?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ competition.idCompetition) }}">
    <button class="btn btn-danger d-inline-flex align-items-center"><i class="fas fa-trash" style="padding-right:3px"></i>Supprimer</button>
</form>
