{% extends 'baseBack.html.twig' %}

{% block title %}Offre
{% endblock %}

{% block body %}
   <div class="d-flex justify-content-between w-100 flex-wrap">
		<div class="mb-3 mb-lg-0">
			<h1>
				<span class="sidebar-icon">

					<img src="{{asset('Back/img/icons/user.png')}}" class="icon icon-s me-2" fill="currentColor" viewbox="0 0 20 20" class="card-img-top rounded-circle border-white" alt="Logout">

				</span>Liste des offres</h1>

		</div>
		<div style="padding-top: 10px;">

			<a href="{{ path('app_offre_new') }}" class="btn btn-primary d-inline-flex align-items-center" style="background-color:#00377E;">
				<i class="fas fa-plus" style="padding-right:3px"></i>
				Cr√©er un nouveau</a>
                
    <form method="post" action="{{ path('envoyer_offre_email') }}">
        <button type="submit" class="btn btn-primary">Envoyer l'offre</button>
    </form>
		</div>
	</div>
	<br>
{% for type, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ type }} alert-dismissible fade show">{{ message }}
         <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
{% endfor %}


	

	<div class="card border-0 shadow mb-4">
		<div class="card-body">
		<div class="table-responsive">
		<table class="table table-centered table-nowrap mb-0 rounded">
        <thead>
            <tr>
                <th>IdOffre</th>
                <th>PourcentageSolde</th>
                <th>PrixSolde</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for offre in offres %}
            <tr>
                <td>{{ offre.idOffre }}</td>
                <td>{{ offre.pourcentageSolde }}</td>
                <td>{{ offre.PrixSolde }}</td>
                <td>
                    <a href="{{ path('app_offre_show', {'idOffre': offre.idOffre}) }}"><i class="fas fa-info-circle text-info"></i></a></a>
                    <a href="{{ path('app_offre_edit', {'idOffre': offre.idOffre}) }}"><i class="fas fa-edit text-warning"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
    </div>
        </div>
    </div>


{% endblock %}
