{% extends 'baseBack.html.twig' %}

{% block title %}Détails Catégorie
{% endblock %}

{% block body %}
	<a href="{{ path('app_categorie_index') }}">
		<i class="fas fa-arrow-left"></i>
	</a>
	<div class="d-flex justify-content-between w-100 flex-wrap">
		<div class="mb-3 mb-lg-0">
			<h1>
				<span class="sidebar-icon">

					<img src="{{asset('Back/img/icons/types.png')}}" class="icon icon-s me-2" fill="currentColor" viewbox="0 0 20 20" class="card-img-top rounded-circle border-white" alt="Logout">

				</span>Catégorie :
				{{ categorie.nom }}</h1>

		</div>
	</div>

	<table class="table">
		<tbody>
			<tr>
				<th class="text-primary fw-bold">IdCategorie</th>
				<td>{{ categorie.idCategorie }}</td>
			</tr>
			<tr>
				<th class="text-primary fw-bold">Nom</th>
				<td>{{ categorie.nom }}</td>
			</tr>
		</tbody>
	</table>

	<div class="row">
		<div class="col-md-2">

			<a href="{{ path('app_categorie_edit', {'idCategorie': categorie.idCategorie}) }}" class="btn btn-warning d-inline-flex align-items-center">
				<i class="fas fa-edit" style="padding-right:3px"></i>Modifier</a>
		</div>
		<div class="col-md-2">
			{{ include('categorie/_delete_form.html.twig') }}
		</div>
	</div>
{% endblock %}
